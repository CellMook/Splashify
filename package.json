    "css-loader": "^0.25.0",
    "electron": "^1.4.1",
    "electron-builder": "^10.9.2",
    "file-loader": "^0.9.0",
    "vue-loader": "^10.0.2",
    "vue-template-compiler": "^2.1.3",
    "webpack": "^2.2.0-rc.3",
    "webpack-dev-server": "^2.2.0-rc.0"
  },
  "build": {
    "appId": "com.dev7studios.splashify"
